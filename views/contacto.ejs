  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">

  <!-- Bootstrap -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <!-- Librería de animaciones AOS -->
  <link href="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.css" rel="stylesheet">

  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />

  <!-- Iconos -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

  <!-- Tu hoja de estilos -->
  <link rel="stylesheet" href="/styles/stylescontacto.css">
  <link rel="stylesheet" href="/styles/style.css">
</head>

<body>

  <!-- NAVBAR -->
  <header id="siteHeader" class="position-fixed top-0 start-0 w-100 z-3">
    <nav class="navbar navbar-expand-lg navbar-dark bg-transparent px-4 py-3">
      <div class="container-fluid justify-content-between">
        <a class="navbar-brand fw-bold fs-5 text-glow" href="#">Asociación Privada de Patronato</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-center" id="navbarNav">
          <ul class="navbar-nav gap-4 text-center">
            <li class="nav-item"><a class="nav-link active" href="/">Inicio</a></li>
            <li class="nav-item"><a class="nav-link" href="servicios">Cursos</a></li>
            <li class="nav-item"><a class="nav-link" href="contacto">Contacto</a></li>
          </ul>
        </div>
      </div>
    </nav>
  </header>

  <!-- HERO -->
  <section class="hero d-flex align-items-end text-white">
    <div class="container py-5">
      <div class="row justify-content-between align-items-end">
        <div class="col-md-6" data-aos="fade-right">
          <h1 class="fw-bold display-4 text-glow">Contáctanos</h1>
          <p class="lead text-shadow">Estamos aquí para ayudarte. Envíanos un mensaje o visítanos.</p>
        </div>
        <div class="col-md-4 text-md-end" data-aos="fade-left">
          <a href="#contacto" class="btn btn-primary btn-glow me-2">Escríbenos</a>
          <a href="#ubicacion" class="btn btn-outline-light btn-glow">Ubícanos</a>
        </div>
      </div>
    </div>
  </section>

  <!-- UBICACIÓN + CONTACTO -->
  <section id="ubicacion" class="position-relative">
    <div class="map-container">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3902.429681318954!2d-77.1069538249394!3d-12.013912188220308!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9105cdf5e7298f69%3A0xf2dedcfe3ccade02!2sASOCIACI%C3%93N%20PRIVADA%20DE%20PATRONATO!5e0!3m2!1ses!2spe!4v1760907364462!5m2!1ses!2spe"
        allowfullscreen="" loading="lazy"></iframe>
    </div>

    <!-- CARD FLOTANTE DE CONTACTO -->
    <div id="contacto" class="contact-overlay container">
      <div class="row justify-content-center">
        <div class="col-lg-10">
          <div class="card contact-card bg-dark-blue text-light shadow-glow p-4 p-md-5" data-aos="zoom-in">
            <div class="row g-4 align-items-start">
              <!-- Formulario -->
              <div class="col-md-6">
                <h3 class="fw-bold text-celeste mb-4">Envíanos un mensaje</h3>
                <!-- API FORMSUBMIT-->
                <form action="https://formsubmit.co/julio06jrmu@gmail.com" method="POST">
                  <!-- Protecciones recomendadas -->
                  <input type="hidden" name="_captcha" value="false">
                  <input type="hidden" name="_next" value="http://localhost:2000/contacto"> 
                  

                  <div class="mb-3">
                    <input type="text" name="motivo" class="form-control" placeholder="Motivo" required>
                  </div>
                  <div class="mb-3">
                    <input type="text" name="nombre" class="form-control" placeholder="Tu nombre" required>
                  </div>
                  <div class="mb-3">
                    <input type="email" name="correo" class="form-control" placeholder="Tu correo" required>
                  </div>
                  <div class="mb-3">
                    <textarea name="mensaje" class="form-control" rows="4" placeholder="Tu mensaje" required></textarea>
                  </div>
                  <button type="submit" class="btn btn-celeste w-100 btn-glow">Enviar</button>
                </form>
                
              </div>

              <!-- Información -->
              <div class="col-md-6">
                <h3 class="fw-bold text-celeste mb-4">Información de contacto</h3>
                <p><i class="bi bi-geo-alt-fill text-celeste me-2"></i> Av. Alejandro Bertello Bollati, Callao 07036</p>
                <p><i class="bi bi-telephone-fill text-celeste me-2"></i> +51 987 654 321</p>
                <p><i class="bi bi-envelope-fill text-celeste me-2"></i> contacto@patronato.org.pe</p>
                <p><i class="bi bi-clock-fill text-celeste me-2"></i> Lunes a Viernes: 9am - 5pm</p>
                <div class="mt-4">
                  <a href="#" class="text-celeste mx-2"><i class="bi bi-facebook fs-4"></i></a>
                  <a href="#" class="text-celeste mx-2"><i class="bi bi-instagram fs-4"></i></a>
                  <a href="#" class="text-celeste mx-2"><i class="bi bi-twitter fs-4"></i></a>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- FOOTER CON PARALLAX Y CONTENIDO ORGANIZADO -->
  <footer class="footer-parallax text-center py-5">
    <div class="footer-overlay container">
      <h2 data-aos="zoom-in">Somos los que enseñamos el estilo de lima norte</h2>
      <div class="row text-start">
        <!-- Contacto -->
        <div class="col-md-4 mb-4">
          <h5>Contacto</h5>
          <p><i class="bi bi-geo-alt"></i> Av. Alejandro Bertello Bollati, Callao
          <p><i class="bi bi-telephone"></i> +51 987 654 321</p>
          <p><i class="bi bi-envelope"></i> (colocar el correo )</p>
          <div class="social-icons mt-2">
            <a href="#"><i class="bi bi-facebook"></i></a>
            <a href="#"><i class="bi bi-instagram"></i></a>
            <a href="#"><i class="bi bi-tiktok"></i></a>
          </div>
        </div>

        <!-- Horario -->
        <div class="col-md-4 mb-4">
          <h5>Horario de Atención</h5>
          <p>Lunes......................... 8:00 – 16:00</p>
          <p>Martes...................... 8:00 – 16:00</p>
          <p>Miercoles................ 8:00 – 16:00</p>
          <p>Jueves...................... 8:00 – 16:00</p>
          <p>Viernes..................... 8:00 – 16:00</p>
          <p>Sabado.................... 8:00 – 16:00</p>
        </div>

        <!-- Promociones -->
        <div class="col-md-4 mb-4">
          <h5>Promociones</h5>
          <p> Se de los primeros en inscribirse y ten un vale de descuento</p>
        </div>
      </div>

      <hr class="mt-4" style="border-color: rgba(135, 206, 235, 0.2);">
      <p class="mt-3">&copy; 2025 Asociación Privada de Patronato. Diseñado por Radar.com</p>
    </div>
  </footer>


  <!-- ELEMENTO FLOTANTE -->
  <div class="chatbot-icon">
    <i class="bi bi-chat-dots-fill"></i>
    <!-- Aquí irá el chatbot -->
  </div>

  <!-- JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/aos@2.3.4/dist/aos.js"></script>
  <script src="/js/contacto.js"></script>
</body>

</html>
