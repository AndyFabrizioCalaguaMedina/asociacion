  <!-- HERO Bootstrap -->
  <header id="inicio" class="hero position-relative">
    <video autoplay muted loop playsinline class="hero-video w-100 h-100 position-absolute top-0 start-0" loading="lazy">
      <source src="videos/Video Portada.mp4" type="video/mp4">
    </video>
    <div class="hero-overlay position-absolute top-0 start-0 w-100 h-100"></div>
    <div class="hero-content position-relative container d-flex flex-column justify-content-center align-items-start">
      <h1 class="hero-title display-1 fw-bold mb-4">
        Transforma tu Pasión en Arte
      </h1>
      <p class="hero-sub lead fs-4">
        Aprende con los mejores estilistas, maquilladores y barberos.<br>
        Cursos especializados para todos los niveles, desde principiantes hasta profesionales.
      </p>
    </div>
  </header>

  <!-- SERVICIOS Bootstrap -->
  <section id="servicios" class="servicios py-5">
    <div class="container">
      <h2 class="section-title text-center mb-5">Servicios Profesionales</h2>
      <div class="row g-4">
        <div class="col-md-4" data-anim>
          <article class="servicio card h-100 border-0 shadow">
            <img src="images/Barberia.webp" alt="Maquillaje profesional" class="card-img-top" loading="lazy">
            <div class="card-body">
              <h3 class="card-title">Barberia</h3>
              <p class="card-text">"Aprende el arte de la barbería y transforma tu futuro."</p>
            </div>
          </article>
        </div>
        <div class="col-md-4" data-anim>
          <article class="servicio card h-100 border-0 shadow">
            <img src="images/Maquillaje.webp" alt="Maquillaje profesional" class="card-img-top" loading="lazy">
            <div class="card-body">
              <h3 class="card-title">Maquillaje</h3>
              <p class="card-text">"Resalta tu belleza aprendiendo el arte del maquillaje."</p>
            </div>
          </article>
        </div>
        <div class="col-md-4" data-anim>
          <article class="servicio card h-100 border-0 shadow">
            <img src="images/Diseño de Cejas.webp" alt="Peinado creativo" class="card-img-top" loading="lazy">
            <div class="card-body">
              <h3 class="card-title">Diseño de cejas</h3>
              <p class="card-text">"Perfecciona tu técnica y domina el diseño de cejas."</p>
            </div>
          </article>
        </div>
      </div>
    </div>
  </section>

  <!-- MOTIVACIÓN Bootstrap -->
  <section id="motivacion" class="motivacion position-relative">
    <div class="motivacion-overlay">
      <img src="images/Motivacion.webp" alt="Motivacional" class="fondo-motivacion w-100" loading="lazy">
      <div class="motivacion-texto position-absolute top-50 start-50 translate-middle text-center" data-anim>
        <h2 class="display-4 fw-bold mb-4">"Cree en ti. Cada corte, cada trazo, cada mirada cuenta."</h2>
        <p class="fs-5">Formamos artistas que dominan el arte de la belleza con pasión, técnica y propósito.</p>
      </div>
    </div>
  </section>

  <!-- CURSOS Bootstrap -->
  <section id="cursos" class="cursos py-5">
    <div class="container">
      <h2 class="section-title text-center mb-5">Cursos Activos</h2>

      <!-- Filtros -->
      <div class="filtros d-flex justify-content-center flex-wrap mb-5">
        <button class="filtro-btn btn btn-outline-primary mx-2 mb-2 active" data-categoria="todos">Todos</button>
        <button class="filtro-btn btn btn-outline-primary mx-2 mb-2" data-categoria="barberia">Barbería</button>
        <button class="filtro-btn btn btn-outline-primary mx-2 mb-2" data-categoria="maquillaje">Maquillaje</button>
        <button class="filtro-btn btn btn-outline-primary mx-2 mb-2" data-categoria="peinado">Diseño de Uñas</button>
        <button class="filtro-btn btn btn-outline-primary mx-2 mb-2" data-categoria="uñas">Diseño de cejas</button>
      </div>

      <div class="row g-4" id="cursosGrid">
        <div class="col-lg-6" data-categoria="barberia" data-anim>
          <article class="curso card h-100 border-0 shadow">
            <video src="videos/Barberia.mp4" autoplay muted loop playsinline class="card-img-top" loading="lazy"></video>
            <div class="card-body">
              <h3 class="card-title">Barbería Avanzada</h3>
              <p class="card-text">Domina cortes modernos, degradados y perfilados con técnicas de alto nivel.</p>
            </div>
          </article>
        </div>

        <div class="col-lg-6" data-categoria="maquillaje" data-anim>
          <article class="curso card h-100 border-0 shadow">
            <video src="videos/Maquillaje.mp4" autoplay muted loop playsinline class="card-img-top" loading="lazy"></video>
            <div class="card-body">
              <h3 class="card-title">Maquillaje Profesional</h3>
              <p class="card-text">Aprende maquillaje artístico, social y editorial con expertos en moda.</p>
            </div>
          </article>
        </div>

        <div class="col-lg-6" data-categoria="peinado" data-anim>
          <article class="curso card h-100 border-0 shadow">
            <video src="videos/Diseño de cejas y pestañas.mp4" autoplay muted loop playsinline
              class="card-img-top" loading="lazy"></video>
            <div class="card-body">
              <h3 class="card-title">Diseño de Cejas</h3>
              <p class="card-text">Descubre técnicas modernas de peinado, alisado y diseño de imagen.</p>
            </div>
          </article>
        </div>

        <div class="col-lg-6" data-categoria="uñas" data-anim>
          <article class="curso card h-100 border-0 shadow">
            <video src="videos/Diseño de uñas.mp4" autoplay muted loop playsinline class="card-img-top" loading="lazy"></video>
            <div class="card-body">
              <h3 class="card-title">Diseño de Uñas</h3>
              <p class="card-text">Domina decoraciones artísticas y técnicas de manicure profesional.</p>
            </div>
          </article>
        </div>
      </div>
    </div>
  </section>

